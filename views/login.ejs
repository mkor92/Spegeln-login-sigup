<%- include ("./layout/header") %> <%- include ("./layout/menu") %>
<script src="/static/js/login-reg.js" defer></script>
    <main class="sec">
      <section class="sec-cont">
        <% if(path === '/login' || path == '/login/'){ %>
       <div class="flex justify-center items-center mt-10 sm:mt-40">

        <div class="w-96 p-6 shadow-lg bg-white rounded-md" id="logged-in-box">
        <h2 class="text-3xl block text-center font-semibold" id="logged-in-text"><i class="fa-solid fa-user mr-5 "></i>Logga in </h2>
        <h3 class="font-semibold text-center mt-5" id="logged-in-text2"></h3>
        <hr class="mt-3">
        <form action="" class="form" id="form">
        <div class="mt-3">
          <label for="username" class="block text-base mb-2">Användarnamn</label>
          <input type="text" id="username" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Ditt användarnamn" autocomplete="nope" required >
        </div>
        <p class="font-semibold mt-3 text-red-600 animate-pulse" id="error"></p>
        <div class="mt-3">
          <label for="password" class="block text-base mb-2">Lösenord</label>
          <input type="password" id="password" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Ditt lösenord" autocomplete="nope" required >
        </div>
        
        <div class="mt-3 flex justify-between item-center">
        <div>
          <input type="checkbox">
          <label>Kom ihåg mig</label>
        </div>
        <div><a href="#" class="text-default-red/75 font-semibold">Glömt lösenord?</a></div>
        
      </div>
      <div class="mt-5">
        <button id="logInBtn" class="border-2 border-login-btn bg-login-btn text-black py-1 w-full rounded-md hover:bg-transparent hover:text-login-btn font-semibold">Logga in</button>
      </div>
      <div class="mt-5 flex justify-center items-center "><h3 class=" text-center  w-96 bg-white  p-2 rounded-md shadow-lg" id="logged-in-text3">Inte medlem än? <a href="/register" class="underline decoration-double decoration-login-btn font-semibold hover:text-login-btn ">Registrera dig här</a></h3></div>
      </div>
    </form>
      
       </div>
       <% } %>



       <% if(path === '/register' || path == '/register/'){ %>
       <div class="flex justify-center items-center mt-10 sm:mt-20">

        <div class="w-96 p-6 shadow-lg bg-white rounded-md" id="register-box">
        <h2 class="text-3xl block text-center font-semibold" id="register-text"><i class="fa-solid fa-user mr-5 "></i>Registrera dig</h2>
        <hr class="mt-3">
        <form action="" class="form" id="form">
        <div class="mt-3 form-control">
          <label for="name" class="block text-base mb-2">För- och efternamn</label>
          <input type="text" id="name" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Ditt för- och efternamn" required autocomplete="nope">
          
          
        </div>
        
        <div class="mt-3 form-control">
          <label for="username-reg" class="block text-base mb-2">Användarnamn</label>
          <input type="text" id="username-reg" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Välj ett användarnamn" required autocomplete="nope">
          
        </div>
        <div class="mt-3 form-control">
          <label for="email-reg" class="block text-base mb-2">E-post</label>
          <input type="email" id="email-reg" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 peer-invalid:border-red-500" placeholder="Din e-postadress" required autocomplete="nope">
          
        </div>
        <small id="email-error" class="font-semibold text-red-600"></small>
        <div class="mt-3 form-control">
          <label for="password-reg" class="block text-base mb-2">Lösenord</label>
          <input type="password" autocomplete="nope" id="password-reg" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Ditt lösenord" required>
          
        </div>
        <div class="flex space-between" id="indicator">
          <p class="border-2 border-red-500 w-1/3 hidden" id="weak"></p>
          <p class="border-2 border-yellow-500 w-1/3 hidden" id="medium"></p>
          <p class="border-2 border-green-500 w-1/3 hidden" id="strong"></p>
        </div>
        <small id="indicator-text" class="font-semibold"></small>
        <div class="mt-3 form-control">
          <label for="cpassword-reg" class="block text-base mb-2">Bekräfta lösenord</label>
          <input type="password" autocomplete="nope" id="cpassword-reg" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Bekräfta ditt lösenord" required>
          
        </div>
        <small id="psw-error" class="font-semibold text-red-600"></small>
        <div class="mt-3 flex justify-between item-center">
        <div>
          <input type="checkbox">
          <label>Ja, tack! Jag vill ha nyhetsbrev</label>
        </div>
        
        
      </div>
      <p class="font-semibold mt-3 text-red-600 text-center" id="emptyInput"></p>
      <div class="mt-5">
        <button id="signup" class="btn border-2  border-login-btn bg-login-btn text-black py-1 min-w-full rounded-md hover:bg-transparent hover:text-login-btn font-semibold">Bli medlem</button>
      </div>
    </form>
    <div class="mt-5 flex justify-center items-center  "><h3 class=" text-center  w-96 bg-white  p-2 rounded-md shadow-lg">Tillbaka till inloggning? <a href="/login" class="underline decoration-double decoration-login-btn font-semibold hover:text-login-btn ">Klicka här</a></h3></div>
      </div>
      
       </div>

       <% } %>

      </section>
    </main>

    <%- include ("./layout/footer") %>
  </body>
</html>
